{
  "name": "media-deep-dive-agent",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "productName": "Media Deep-Dive Agent",
    "appId": "com.agentic.deepdive",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/dist/**",
      "backend/.agentic_ai_config/**/*",
      "public/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend/.env",
        "to": "backend/.env",
        "filter": ["**/*"]
      }
    ]
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "html2pdf.js": "^0.10.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.0",
    "recharts": "^2.15.3"
  },
  "devDependencies": {
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^4.9.0",
    "vite": "^4.4.0"
  }
}